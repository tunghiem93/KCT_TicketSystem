@using TicketDesk.Localization.Views.Shared
@using TicketDesk.Web.Identity


<li class="dropdown">
    <a href="#" class="dropdown-toggle" data-toggle="dropdown">
        <i class="fa fa-user"></i><span class="">
            @(User.Identity.IsAuthenticated ? User.Identity.GetUserDisplayName() : _Layout.Account)
        </span>
        <span class="caret"></span>
    </a>
    <ul class="dropdown-menu" role="menu">
        @if (User.Identity.IsAuthenticated)
        {
            <li>
                @Html.ActionLink(@_Layout.MyAccount, "Manage", "Account")
            </li>
            <li>
                @Html.ActionLink(@_Layout.LogOff, "SignOut", "User")
            </li>
        }
        else
        {
            if (ApplicationConfig.RegisterEnabled)
            {
                <li>@Html.ActionLink(@_Layout.Register, "Register", "User", null, new { id = "registerLink" })</li>
            }
            <li>@Html.ActionLink(@_Layout.SignIn, "SignIn", "User", null, new { id = "loginLink" })</li>
        }
    </ul>

</li>

